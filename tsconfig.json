{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "DOM"],
    "outDir": "dist",
    "module": "commonjs"
  },
  "exclude": ["node_modules", "example"]
}
